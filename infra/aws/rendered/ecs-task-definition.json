{
  "family": "InfraStackTaskDefE1F4AEA1",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::508261694268:role/portfolioEcsExecutionRole",
  "taskRoleArn": "arn:aws:iam::508261694268:role/portfolioEcsTaskRole",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "508261694268.dkr.ecr.us-east-1.amazonaws.com/snippet-manager-api:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "S3_BUCKET",
          "value": "cdk-hnb659fds-assets-508261694268-us-east-1"
        },
        {
          "name": "CORS_ORIGIN_ALLOWLIST",
          "value": "*"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:508261694268:secret:portfolio/backend/DATABASE_URL-4ezsB3"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/InfraStackTaskDefE1F4AEA1",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
