generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Experience {
  id          String
  title       String
  company     String
  period      String
  description String
  side        String // 'left' | 'right'

  @@id([id])
  @@map("experiences")
}

model Project {
  id              String
  title           String
  description     String
  fullDescription String
  image           String
  tags            String // JSON array
  liveUrl         String
  githubUrl       String
  metrics         String // JSON array

  @@id([id])
  @@map("projects")
}

model Settings {
  id         Int    @id @default(1)
  resumePath String @default("/resume/Resume.pdf")

  @@map("settings")
}

model About {
  id           Int    @id @default(1)
  name         String @default("")
  email        String @default("")
  education    String @default("")
  availability String @default("")
  bio          String @default("[]") // JSON array of paragraph strings
  image        String @default("")

  @@map("about")
}

model Contact {
  id    Int    @id @default(1)
  items String @default("[]") // JSON array of { label, value, href, target?, download? }

  @@map("contact")
}
